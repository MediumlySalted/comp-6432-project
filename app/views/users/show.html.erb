
<div class="container">
  <div class="d-inline-flex justify-content-center mb-4">
    <h2>Your Recipes</h2>
    <%= link_to 'Create New Recipe', new_recipe_path, class: 'create-btn ms-3' %>
  </div>
  <div class="row row-cols-auto justify-content-center">
  <% @recipes.each do | recipe | %>
    <div class="col mb-4">
      <%= link_to edit_recipe_path(recipe), class: 'edit-card-btn' do %>
        <div class="card shadow p-4 bg-body rounded h-100 w-100">
          <div class="card-body">
            <div class="label position-absolute top-0 end-0 m-2">Edit</div>
            <h2 class="card-title" style="margin-bottom: .25rem;"><%= recipe.name %></h2>
            <!-- Tags -->
              <% recipe.tags.each do | tag | %>
                <div class="tag" style="background-color: <%= tag.color %>; border-color: <%= tag.color %>"><%= tag.name %></div>
              <% end %>
            <!-- Ingredients -->
              <h5 class="card-text">Ingredients</h5>
              <ul>
                  <% recipe.ingredients.each do | ingredient | %>
                  <li><p class="card-text"><%= ingredient %></p></li>
                  <% end %>
              </ul>
            <!-- Directions -->
              <h5 class="card-text">Directions</h5>
              <div>
                  <% directions = recipe.directions.split("\n") %>
                  <% directions.each do | direction | %>
                  <p class="card-text" style="margin: 0; padding: 0;"><%= direction %></p>
                  <% end %>
              </div>

          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  </div>
</div>
